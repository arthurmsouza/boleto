<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="stylesheets/regulator.css" type="text/css" media="screen">
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet prefetch' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="scripts/onepage.js"></script>
    <script src="scripts/regulator.js"></script>
    <script src="scripts/filter.js"></script>
    <title>CIP</title>

    <script>
        $(function() {
            $("#link-blockchain").addClass('active');
            $('div#sidenav a').click(function() {
                $('div#sidenav a').removeClass('active');
                $(this).addClass('active');
            });
            $('#totalBlocos').text('-');
        });
    </script>

</head>

<body>

    <div id="consulta">
        <div id="regulator">
            <div id="sidenav">
                <ul id="list_sidenav">
                    <a id="link-user" class="svg">
                        <li id="lista"> <img src="../images/cip2.jpg"><label for="lastname"><%=usuario.nome%></label></li>
                    </a>
                    <a href="/" id="logout">
                        <li class="lista"> <label for=""><i class="fa fa-sign-out" aria-hidden="true"></i> SAIR</label></li>
                    </a>
                    <a xlink:href="#regulator" onclick="cip_bc()" id="link-blockchain" class="svg">
                        <li id="lista">
                            <img id="bloquinhos" class=" svg networking" src="images/speedometer.svg" />
                            <label class="nav" for="">dashboard</label>
                        </li>
                    </a>
                    <a xlink:href="#regulator" onclick="cip_ledger()" id="link-blockchain" class="svg">
                        <li id="lista">
                            <img id="bloquinhos" class=" svg networking" src="images/aceite.svg" />
                            <label class="nav" for="">aceites</label>
                        </li>
                    </a>
                </ul>
            </div>
            <div class="page" id="blockchain">
                <h2>Transações em tempo real</h2>
                <ul class="dashboard">
                    <li>
                        <div class="card_dash">
                            <object id="svg1" data="images/hourglass.svg" type="image/svg+xml"></object>
                            <h2 id="blocosHora">
                                <%=infoDashboard.blocosHora%>
                            </h2>
                            <p>BLOCOS POR HORA</p>

                        </div>
                        <div class="card_dash">
                            <object id="svg1" data="images/goldbars.svg" type="image/svg+xml"></object>
                            <p>TOTAL DE BLOCOS</p>
                            <h2 id="totalBlocos">
                                <%=infoDashboard.totalBlocos%>
                            </h2>
                        </div>
                    </li>
                </ul>

                <div class="blocos">

                </div>
            </div>
            <div class="page" id="ledger">
                <h2>Aceites Registrados no Ledger</h2>
                <input id="pesquisa" type="search" name="search" placeholder="Número do Boleto..." />
                <table id="tab_regulator">
                    <thead>
                        <tr>
                            <th>N° do Boleto</th>
                            <th>Data de Vencimento</th>
                            <th>Status</th>
                            <th>N° da Proposta</th>
                            <th>Data do Aceite</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% for(var i=0; i<aceiteLista.length; i++) {%>
                            <tr>
                                <td>
                                    <%=aceiteLista[i].boleto.linhaDigitavel%>
                                </td>
                                <td>
                                    <%=aceiteLista[i].boleto.dataVencimento%>
                                </td>
                                <td class="stats">
                                    <%=aceiteLista[i].boleto.status_pagamento%>
                                </td>
                                <td>
                                    <%=aceiteLista[i].hashProposta%>
                                </td>
                                <td style="line-height: 18px;">
                                    <%=aceiteLista[i].dataHoraAceite%>
                                </td>
                            </tr>
                            <%} %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
    </script>
    <div style="display:none">Icons made by <a href="http://www.flaticon.com/authors/becris" title="Becris">Becris</a> from
        <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> is licensed by
        <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a>
    </div>

    <script src="/scripts/websocket_client.js" type="text/javascript"></script>
    <script>
    </script>
</body>

</html>